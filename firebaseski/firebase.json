{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites":[
        {"source":"/home","destination":"/index.html"},
        {"source":"/blog/chile","destination":"/index.html"},
        {"source":"/aboutme/shotglass","destination":"/index.html"},
        {"source":"/aboutme/bio","destination":"/index.html"},
        {"source":"/careers","destination":"/index.html"},
        {"source":"/aboutme/hobbies","destination":"/index.html"},
        {"source":"/traveltrails/login","destination":"/index.html"},
        {"source":"/traveltrails/signup/register/account","destination":"/index.html"},
        {"source":"/traveltrails/signup/register/bloguser","destination":"/index.html"},
        {"source":"/traveltrails/signup/verify","destination":"/index.html"},
        {"source":"/traveltrails/profile","destination":"/index.html"},
        {"source":"/traveltrails/profile/edit","destination":"/index.html"},
        {"source":"/traveltrails/profile/edit/pic","destination":"/index.html"},
        {"source":"/traveltrails","destination":"/index.html"},
        {"source":"/user","destination":"/index.html"},
        {"source": "/traveltrails/**","dynamicLinks": true, "destination":"/index.html"},
        {"source": "/traveltrails/**/trips/**","dynamicLinks": true, "destination":"/index.html"}
    ]
  }
}